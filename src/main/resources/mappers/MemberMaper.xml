<!--mybatis mapper meta data  setting-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hello.moviecomm.repository.MemberMapper">
    <select id="findById" resultType="Member">
        SELECT
                        member_no,
                        member_id,
                        name,
                        password,
                        create_at
        FROM member
        WHERE member_id = #{memberId}
    </select>

    <select id="findRolesByNo" resultType="Role">
        SELECT
                        member_no,
                        authority_code
        FROM member_role
        WHERE member_no = #{memberNo}
    </select>

    <select id="findAuthorityByCode" resultType="Authority">
        SELECT
                        authority_code,
                        name,
                        description
        FROM authority
        WHERE authority_code = #{authorityCode}
    </select>
</mapper>